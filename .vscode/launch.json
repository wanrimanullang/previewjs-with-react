{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "VS Code Extension",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        "--disable-extensions",
        "--extensionDevelopmentPath=${workspaceFolder}/integrations/vscode"
      ],
      "preLaunchTask": "build"
    }
  ]
}
